<?xml version="1.0" encoding="utf-8"?>
<beans>

	<bean name="student" class="xyz.tmlh.entity.Student">
		<property name="name" value="123"></property>
	</bean>

	<bean name="teacher" class="xyz.tmlh.entity.Teacher">
		<property name="student" ref="student"></property>
	</bean>
	
	<bean name="person" class="xyz.tmlh.entity.Person" scope="prototype">
		<property name="teacher" ref="teacher"></property>
		<property name="student" ref="student"></property>
	</bean>

</beans>